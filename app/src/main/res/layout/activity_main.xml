<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/dimas" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Dimas Indra Vigiarta"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="A11.2021.13494"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        />



    <LinearLayout
        android:id="@+id/linearlayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/nim"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/hobi"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hobi :"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/isi_hobi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="3dp"
        android:text="-  Bermain Bulu Tangkis"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/isi_hobi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_hobi1"
        android:text="-  Main Game"
        android:textSize="16sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/isi_hobi3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_hobi2"
        android:text="-  Jalan jalan"
        android:textSize="16sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:id="@+id/linearlayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_1"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/desc" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Deskripsi Singkat :"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:id="@+id/isidesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_2"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:text="Hallo! Saya Dimas Indra Vigiarta, Saya Mahasiswa UDINUS dari fakultar ilmu komputer prodi S1 Teknik Informatika. Saya sedang belajar Android Studio."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/contac"
        android:layout_marginVertical="30dp"
        android:layout_below="@+id/isidesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Contac  :"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_masage"
        android:onClick="bukaEmail"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/contac"
        android:layout_marginStart="96dp"
        android:background="@color/purple_500"
        android:drawableTop="@drawable/mail"/>

    <Button
        android:id="@+id/btn_call"
        android:onClick="bukaTelepon"
        android:background="@color/purple_500"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/contac"
        android:layout_marginStart="177dp"
        android:drawableTop="@drawable/call"/>

    <Button
        android:id="@+id/btn_maps"
        android:background="@color/purple_500"
        android:layout_below="@+id/contac"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="258dp"
        android:drawableTop="@drawable/map"/>


</RelativeLayout>